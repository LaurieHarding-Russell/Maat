<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet author="LHR" id="1">
		<createTable tableName="PRODUCT" schemaName="MAAT">
			<column name="PRODUCT_ID" type="NUMBER">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="NAME" type="varchar(64)"> </column>
		</createTable>
	</changeSet>
	
    <changeSet author="LHR" id="2">
		<createTable tableName="COMPANY" schemaName="MAAT">
			<column name="COMPANY_ID" type="NUMBER">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="NAME" type="varchar(64)"> </column>
			<column name="PRODUCTS" type="NUMBER"> 
				<constraints nullable="false" foreignKeyName="fk_company_product__id" references="PRODUCT(PRODUCT_ID)" />
			</column>
        </createTable>
    </changeSet>
    
	<changeSet author="LHR" id="3">
        <createTable tableName="PRODUCT_REVIEW" schemaName="MAAT">
			<column name="PRODUCT_REVIEW_ID" type="NUMBER">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="PRODUCT_ID" type="NUMBER">
				<constraints nullable="false" foreignKeyName="fk_pr_company_id" references="COMPANY(COMPANY_ID)"/>
			</column>
			<column name="AUTHOR" type="varchar2(64)">
			</column>
			<column name="COMMENT" type="varchar2(1024)">
			</column>
			<column name="RATING" type="NUMBER"></column>
        </createTable>
    </changeSet>
    
   	<changeSet author="LHR" id="4">
        <createTable tableName="COMPANY_REVIEW" schemaName="MAAT">
			<column name="COMPANY_REVIEW_ID" type="NUMBER">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="AUTHOR" type="varchar2(64)">
			</column>
			<column name="COMMENT" type="varchar2(1024)">
			</column>
			<column name="RATING" type="NUMBER"></column>
        </createTable>
    </changeSet>

</databaseChangeLog>